@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix ai: <http://dig.csail.mit.edu/2014/PrivacyInformer/appinventor#> .
@prefix android: <http://dig.csail.mit.edu/2014/PrivacyInformer/android#> .
@prefix twitter: <http://dig.csail.mit.edu/2014/PrivacyInformer/Twitter#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .

# Twitter is component
# It is used for social networking
# It enables communication to the Web
# It requires user authorization and login, once login it has many functions
# Search Twitter for tweets or labels
# Sends a Tweet
# Sendg a Tweet with Image
# Direct message to a Twitter user
# Receive recent messages
# Follow Twitter user
# Stop following Twitter user
# Get followers
# Get recent messages by followed users
# Get recent mentions
# Example of usage is usually to share data with Twitter followers, or uploading something to Twitter

# Component Description
twitter:TwitterComponent  
    a   owl:Class;
    rdfs:label  "twitter component";
    rdfs:subClassOf ai:DataGatheringComponent;
    rdfs:subClassOf ai:DataDisseminationComponent;
    ai:description  "allows user to interact with Twitter";
    ai:category     ai:Social;
    ai:details      "Upon log in, many actions are authenticated to the application: ",
                    "Tweet ",
                    "Tweet image ",
                    "Send message ",
                    "Receive message",
                    "Follow another user ",
                    "Stop following an user ",
                    "Get current followers ",
                    "Get tweets of followed users ",
                    "Get tweets that mention the user";

# Privacy Implication and Common Usage
    ai:access       android:Internet; 
    ai:dataUsage    ai:SocialNetworking;
    ai:examples     "Twitter", "WeReport";
    ai:purpose      ai:DataAccess;
    ai:requires     ai:UserLogin .

# Instance Definitions
twitter:Username    rdfs:subClassOf   ai:ComponentProperty; 
                    rdfs:label  "user name of the Twitter account holder " .
                
twitter:Tweet   rdfs:subClassOf   ai:PrivacyLeakingMethod;
                rdfs:label  "twitter's tweet method " .

twitter:MentionsReceived    rdfs:subClassOf   ai:ComponentEvent;
                            rdfs:label  "twitter detects messages that mention the account holder's name " .
